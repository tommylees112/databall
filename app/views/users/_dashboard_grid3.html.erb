<div class="dashboard_grid3">
  <div class="main-chart2">
    <h3>main chart</h3>
    <canvas id="cumulativeOutcome2" style="background-color: transparent;"></canvas>
      <%= content_for :after_js do %>
      <script>
          var inputs = {
            min: -100,
            max: 100,
            count: 8,
            decimals: 2,
            continuity: 1
          };
          var canvas_element = document.getElementById("cumulativeOutcome2");
          // canvas_element.height = 75;
          var lineChart = new Chart(canvas_element, {
            type: 'line',
            data: {
              labels: <%= raw @bet_dates %>,
              datasets: [{
                  data: <%= raw @cumulative_total %>,
                  label: "Total Profit",
                  backgroundColor: "rgba(0, 21, 33, 0.7)",
                  borderColor: "rgba(80, 255, 177, 1)",
                  borderWidth: 1,
                  borderCapStyle: 'butt',
                  fill: true
                }
              ]
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
              title: {
                display: true,
                text: 'Cumulative Profit',
                fontColor: 'rgba(0,0,0,0)',
                fontStyle: 'light'
              },
              hover: {
                intersect: true,
                animationDuration: 400,
              },
              scales: {
                xAxes: [{
                    display: true,
                    scaleLabel: {
                        display: true,
                        labelString: 'Month'
                    }
                }],
                yAxes: [{
                    display: true,
                    scaleLabel: {
                        display: true,
                        labelString: 'Value'
                    }
                }]
            }
          }});
      </script>
      <% end %>
  </div>
  <div class="filter-bar2">
      <%= link_to "All", dashboard_path(b: 'all')%>
      <%= link_to "Won", dashboard_path(b: 'win') %>
      <%= link_to "Lost", dashboard_path(b: 'lost')%>
      <%= link_to "Pending", dashboard_path(b: 'pending')%>
  </div>
  <div class="odds-container">
      <h3>Bets you have made:</h3>
      <% @bets.each do |bet| %>
        <%= render "shared/dashboard_card", bet: bet %>
      <% end %>
  </div>

</div>
