<div class="dashboard_grid1">
    <!-- MAIN CHART -->
    <div class="main-chart">
      <!-- <h3>main chart</h3> -->
      <canvas id="lineChart" style="background-color: transparent;"></canvas>
      <script>
          var inputs = {
            min: -100,
            max: 100,
            count: 8,
            decimals: 2,
            continuity: 1
          };
          var canvas_element = document.getElementById("lineChart");
          var lineChart = new Chart(canvas_element, {
            type: 'line',
            data: {
              labels: <%= raw @bet_dates %>,
              datasets: [{
                  data: <%= raw @cumulative_total %>,
                  label: "Total Profit",
                  backgroundColor: "rgba(0, 21, 33, 0.7)",
                  borderColor: "rgba(80, 255, 177, 1)",
                  borderWidth: 1,
                  borderCapStyle: 'butt',
                  fill: true
                }
              ]
            },
            options: {
              title: {
                display: true,
                text: 'Cumulative Profit',
                fontColor: 'rgba(0,0,0,0)',
                fontStyle: 'light'
              },
              hover: {
                mode: nearest,
                intersect: true,
                animationDuration: 400,
              },
              tooltips: {
                mode: index,
              },
              scales: {
                xAxes: [{
                    display: true,
                    scaleLabel: {
                        display: true,
                        labelString: 'Month'
                    }
                }],
                yAxes: [{
                    display: true,
                    scaleLabel: {
                        display: true,
                        labelString: 'Value'
                    }
                }]
            }
          }});
      </script>
    </div>
    <!-- BAR CHART -->
    <div class="bar-chart">
      <!-- <h3>bar chart</h3> -->
      <%#= column_chart @profits %>
      <canvas id="bar-chart"></canvas>
      <script>
        new Chart(document.getElementById("bar-chart"), {
        type: 'bar',
        data: {
          labels: <%= raw @bet_dates %>,
          datasets: [
            {
              label: "Performance",
              backgroundColor: <%= raw @bet_color %>,
              data: <%= raw @bet_returns %>
            }
          ]
        },
        options: {
          legend: { display: false },
          title: {
            display: true,
            text: 'Bar Chart'
                }
              }
          });
      </script>
    </div>
    <!-- EXTRA INFO -->
    <div class="wins">
        <h4>Wins</h4>
        <h5><%= @wins.count %></h5>
    </div>
    <div class="losses">
        <h4>Losses</h4>
        <h5><%= @losses.count %></h5>
    </div>
    <div class="total-profit">
        <h4>Profit</h4>
        <h5><%= @bet_returns.last %></h5>
    </div>
</div>
