.index-card {
  padding: 20px 10px;
  background-color: rgba(0, 21, 33, 0.79);
  border: 1px solid transparent;
  border-radius: 5px;
  margin: 10px 40px;
  display: flex;
  position: relative;
  justify-content: space-between;
  &:hover .hexagon {
    transform: scale(1.1);
  }
  .flex-item {

  }
  .rating {
    position: absolute;
    top: -20px;
    left:-20px;
    border: 2px solid white;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .odd-card-link {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 2;
    background: transparent;
    &:hover {
      background: rgba(0,0,0,0.1);
    }
  }
  .card-teams {
    .team {
      color: white;
      width: 300px;
      .team-logo {
        width: 50px;
      }
    }
  }

  h5.team-name {
    text-align: left;
  }

  .card-middle {
    flex-grow: 1;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .card-end {
    margin-right: 60px;
    display: flex;
    align-items: center;
    .hexagon {
      color: white !important;
      text-shadow: 0.5px 0.5px 0px black;
      margin: auto;
      width: 90px;
      height: 104px;
      background-size: cover;
      display: flex;
      justify-content: center;
      align-items: center;
      transition: .5s;
      a {
        text-decoration: none;
        color: white;
      }
      .hover-text {
        display: none;
      }
      span {
        &.active {
          color: red;
        }
      }
    }
  }

.card-odds {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20px;
}
.avatar-square {
  width: 50px;
}
.winning-team {
  padding-bottom: 8px;
  h5 {
  border-bottom: 2px solid $green;
  padding-bottom: 2px;
  }
}
  .icons {
    display: flex;
    align-items: center;
    .hexagon {
      position: relative;
      img {
        width: 80px;
      }
      &:hover {
        .hexagon {
          transform: scale(1.1);
          a {
            text-decoration: none;
            color:white;
          }
          .match-rating {
            display: none;
          }
          .hover-text {
            display: flex;
            text-align: center;
          }
        }
      }
    }
  }
}

.new_match {
  text-decoration: none;
  color: white;
  display: none;
  &:hover {
    color: white;
  }
  &.active {
    display: block;
  }
}

.outcome  {
  margin-left: 50px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin: 0;
  h3 {
    margin: 0;
  }
}

.bookmaker {
  margin-right: 270px;
  width: 120px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0px;
}

