.index-card {
  padding: 20px 10px;
  width: 70%;
  background-color: rgba(0, 21, 33, 0.79);
  border: 1px solid transparent;
  border-radius: 5px;
  margin: 10px auto;
  display: flex;
  position: relative;
  justify-content: space-between;
    &:hover .hexagon {
      transform: scale(1.1);
    }

  .flex-item {
    flex: 1 0 30%;

  }
  .rating {
    position: absolute;
    top: -20px;
    left:-20px;
    border: 2px solid white;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .odd-card-link {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 2;
    background: transparent;
    &:hover {
      background: rgba(0,0,0,0.1);
    }
  }
  .card-teams {

    .team {
      color: white;
      .team-logo {
        width: 50px;
      }
    }
  }

  .card-middle {
    display: flex;
    align-items: center;
    .hexagon {
      color: white;
      text-shadow: 0.5px 0.5px 0px black;
      margin: auto;
      width: 90px;
      height: 104px;
      background-size: cover;
      display: flex;
      justify-content: center;
      align-items: center;
      transition: .5s;
      .hover-text {
        display: none;
      }
      span {
        &.active {
          color: red;
        }
      }
    }
  }

  .card-odds {

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;

      .btn {
        z-index: 3;
    padding: 3px;
    text-align: center;
    border-radius: 30px;
    font-size:19px;
    background-color: rgba(80, 255, 177, 0.8);
    color: black;
    font-weight: lighter;
    border: 1px solid $green;
    border-color: transparent;
    width: 100%;
    height: 40%;
    &:hover {
      background-color: rgba(80, 255, 177, 1);
      text-decoration: none !important;
      color: black;
    }
    }
    .input-group-addon {
      background: transparent;
      border: none;
    }
    .form-control {
      margin: 5px;
      width: 75px;
      background: transparent;
      border: none;
      border-bottom: 2px solid white;
      &:focus {
        box-shadow: none;
      }
    }
  }


  .avatar-square {
    width: 50px;
  }


  .winning-team {
    padding-bottom: 8px;
    h5 {
    border-bottom: 2px solid $green;
    padding-bottom: 2px;
    }
  }


  .icons {
    display: flex;
    align-items: center;

.hexagon {
  position: relative;
  img {
    width: 80px;

  }
  &:hover {
    .hexagon {
      transform: scale(1.1);
      a {
        text-decoration: none;
        color:white;
      }
      .match-rating {
        display: none;
      }
      .hover-text {
        display: flex;
        text-align: center;

      }
    }
  }
}
}
}

#new_match {
  text-decoration: none;
  color: white;
  &:hover {
    text-decoration:none;
    color: white;
  }
}
