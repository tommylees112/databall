.card {
  height: 350px;
  color: white;
  position: relative;
  margin-left: 90px;
}

.img-data {
  height: 300px;
  margin-left: 50%;
  margin-top: 5%;
}



.card-category {
  position: absolute;
  top: 20px;
  left: 15px;
  font-size: 18px;
  text-transform: uppercase;
}
.card-description {
  position: absolute;
  bottom: 15px;
  left: 15px;
  text-align: center;
  img {
    width: 55%;

  }
}
.card-description h2 {
  font-size: 25px;
}
.card-description p {
  font-size: 18px;
  opacity: 0.7;
  font-weight: lighter;
}


.container2 {
  .card-category {
    top:50px;
  }

  .card-description {
    bottom: 25px;
    img {
      width: 65%;
    }
  }
}


.container3 {
  .img-data {
    width: 400px;
    height: auto;
    margin-top: 70px;
  }

}
