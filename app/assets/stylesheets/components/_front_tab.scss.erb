.front-page-container {
  display: flex;
}

.tabs-container {
  height: calc(100vh - 70px);
  width: 180px;
    background-color: #021721;

}
.league-tab {
  a {
    height: calc(( 100vh - 70px) / 5.5);
  }
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-top: 5px;
  img {
    height: 100px;
    filter: brightness(0) invert(1) opacity(0.7);
  }
  &.active {
      img {
        filter: brightness(0) invert(1) opacity(1);
    }
  }
}
.league-tab:first-child {
  a {
    height: calc(( 100vh - 70px) / 11);
  }
}

.ind-container {
  flex-grow: 1;
  height: calc(100vh - 70px);
}
#all-tab {
  color: rgba(255, 255, 255, 0.7);
  font-family: 'Nunito', sans-serif;
  font-size: 40px;
  font-weight: bold;
  padding-top: 20px;
  &.active {
    color: white;
  }
}
.front-body {
  position: relative;
}
.odds-toggle {
  position: absolute;
  display: flex;
  top: 0px;
  right: 0px;
  h6 {
    margin-right: 10px;
  }
}
























