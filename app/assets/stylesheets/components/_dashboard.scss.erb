  display: grid;
  grid-template-columns: 55% 1fr 1fr;
  grid-template-rows: 55% 1fr 1fr;
}
.main-chart {
  grid-column: 1/span3;
  grid-row: 1/span1;
}
.bar-chart {
  grid-column: 1/span1;
  grid-row: 2/span2;
}
.wins{
  grid-column: 2/span1;
