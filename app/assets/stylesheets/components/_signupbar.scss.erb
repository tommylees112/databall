.ready {

  height: 90px;
  background-color: rgb(211,211,211);
  margin: 0px;
  transition: all 0.3s ease;
  padding: 0px 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  h4 {
    color: rgba(0,0,0,0.7);
    margin: 0px;
    padding: 8px;
  }

  a {
    padding: 3px;
    text-align: center;
    border-radius: 30px;
    font-size:19px;
    background-color: rgba(80, 255, 177, 0.6);
    color: black;
    font-weight: lighter;
    border: 1px solid $green;
    border-color: transparent;
    width: 10%;
    height: 40%;
    &:hover {
      background-color: rgba(80, 255, 177, 1);
      text-decoration: none !important;
      color: black;
    }
    }
}

